<%= form_for [:admin, @component] do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, readonly: @component.persisted? %>
  </div>
  <div class="field">
    <%= f.label :use_for %><br>
    <%= f.text_field :use_for %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_field :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<% if !@component.new_record? %>
  <%= render partial: "component_params", locals: {component_params: @component.component_params, component: @component} %>
<% end %>
